#Firewall configuration file for Openwrt /etc/config/firewall
#Useful links
#https://openwrt.org/docs/guide-user/firewall/firewall_configuration
#https://openwrt.org/docs/guide-user/firewall/fw3_configurations/fw3_config_examples

config defaults
	option input 'REJECT'
	option output 'ACCEPT'
	option forward 'REJECT'

config zone
	option name 'GRAVE'
	option input 'REJECT'
	option output 'ACCEPT'
	option forward 'REJECT'
	option masq '1'
	option mtu_fix '1'
	list network 'GRAVE'

config zone
	option name 'NETSEC'
	option input 'ACCEPT'
	option output 'ACCEPT'
	option forward 'ACCEPT'
	list network 'NETSEC'

config zone
	option name 'NETSECP'
	option input 'ACCEPT'
	option output 'ACCEPT'
	option forward 'ACCEPT'
	list network 'NETSECP'

config zone
	option name 'MSSI'
	option input 'ACCEPT'
	option output 'ACCEPT'
	option forward 'ACCEPT'
	list network 'MSSI'

config forwarding
	option src 'NETSECP'
	option dest 'GRAVE'
